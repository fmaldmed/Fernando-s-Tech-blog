<div class="card d-flex flex-column">
  <div class="title px-10">
    <h3>New Post</h3>
  </div>
  <form class="new-form p-5">
    <div class="mb-3">
      <label for="inputPost" class="form-label">Title</label>
      <textarea class="form-control" maxlength="100" id="inputPost"></textarea>
    </div>
    <div class="mb-3">
      <label for="inputcontent" class="form-label">Content</label>
      <textarea class="form-control" maxlength="250" id="inputcontent" rows="2"></textarea>
    </div>
    <div class="row">
      <div class="col d-flex flex-row justify-content-between">
        <button type="submit" class="btn btn-primary" id="btn-submit-new-post">Add Post</button>
      </div>
    </div>
  </form>
</div>

<script src="/js/Post.js"></script>